worker_processes 1;
daemon off;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;

  server {
    listen 8080;
    root <%= ENV["APP_ROOT"] %>;

    location / {
      index index.html;
      try_files $uri $uri/ =404;
    }
  }
}
